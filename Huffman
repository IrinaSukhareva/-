#include <iostream>
#include <string>
using namespace std;

/*1 посчитать кол-во встречаемости букв
2создать дерево
3заполнить цифрами
*/

struct Node{
	char letter; //буква
	unsigned int count; //кол-во встречаемости
	Node *left, *right;
};

//добавление нового узла дерева
Node* addNode(char lette, unsigned int count, Node* left, Node* right){
	Node* node = new Node();
	node->letter = letter;//key
	node->count = count;
	node->left = left;
	node->right = right;
return node;
}

void Huffman(const char* original = "original text.txt", const char* cipher = "cipher text.txt") {
    FILE* input;
    fopen_s(&input, original, "r");
    if (!input) {
        puts("ERROR: original text does not open\n");
        exit(1);
    }

    fclose(input);

    FILE* output;
    fopen_s(&output, cipher);
    fopen_s(&input, original);
    if (!input || !output)
    {
        puts("ERROR: the texts didn't open\n"); 
        exit(1);
    }


    fclose(input);
    fclose(output);
}


int main()
{
Huffman()
}
